# Use the official Grafana Agent image
FROM grafana/agent:v0.37.5

# Copy our custom config into the container
COPY agent-config.yaml /etc/agent/config.yaml

# Expose the metrics/health port
EXPOSE 12345

# Run Grafana Agent with our config
ENTRYPOINT ["/usr/bin/grafana-agent"]
CMD ["--config.file=/etc/agent/config.yaml"]
