# Use the official lightweight Grafana Agent image
FROM grafana/agent:latest

# Set working directory
WORKDIR /etc/agent

# Copy configuration file from the repo into container
COPY agent-config.yaml /etc/agent/config.yaml

# Expose agent HTTP/metrics port
EXPOSE 12345

# Start the Grafana Agent using full binary path
ENTRYPOINT ["/usr/bin/grafana-agent", "run", "--config.file=/etc/agent/config.yaml"]
