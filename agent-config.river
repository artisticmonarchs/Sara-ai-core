# Grafana Agent â€” Flow Mode Configuration

metrics {
  global {
    scrape_interval = "15s"
  }

  remote_write {
    url = env("GRAFANA_CLOUD_REMOTE_WRITE_URL")
    basic_auth {
      username = env("GRAFANA_CLOUD_INSTANCE")
      password = env("GRAFANA_CLOUD_API_TOKEN")
    }
  }
}

logs {
  clients {
    url = env("GRAFANA_CLOUD_LOKI_URL")
    basic_auth {
      username = env("GRAFANA_CLOUD_INSTANCE")
      password = env("GRAFANA_CLOUD_API_TOKEN")
    }
  }

  positions_directory = "/tmp/agent/wal"
}
